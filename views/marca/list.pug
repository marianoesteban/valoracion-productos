extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3 Marcas
  
  p
    a.btn.btn-success(href='marcas/agregar')
      i.fas.fa-plus.fa-sm
      | Agregar marca

  table.table.table-hover
    thead.thead-dark
      tr
        th Nombre
    tbody
      each marca in marcas
        tr
          td= marca.nombre
